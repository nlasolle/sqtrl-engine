<SQTRule>

	<prefixes>
		<prefix label="rdfs:" iri="http://www.w3.org/2000/01/rdf-schema#"></prefix>
		<prefix label="ahpo:" iri="http://e-hp.ahp-numerique.fr/ahpo#"></prefix>
		<prefix label="dcterms:" iri="http://purl.org/dc/terms/"></prefix>
	</prefixes>

	<rules>

		<rule iri="http://sqtrl-rules/generic/1"
			label="Generalize object class">
			<context>?C rdfs:subClassOf ?D</context>
			<left>?x ?p ?C</left>
			<right>?x ?p ?D</right>
			<cost>5.0</cost>
			<exception>?C rdfs:subClassOf ?X . ?X rdfs:subClassOf ?D</exception>
			<exception>FILTER(?C != ?D)</exception>
			<explanation>Generalizing ?C in ?D</explanation>
		</rule>

		<rule iri="http://sqtrl-rules/generic/2"
			label="Generalize subject class">
			<context>?C rdfs:subClassOf ?D</context>
			<left>?C ?p ?x</left>
			<right>?D ?p ?x</right>
			<cost>5.0</cost>
			<explanation>Generalizing ?C in ?D</explanation>
		</rule>

		<rule iri="http://sqtrl-rules/generic/3"
			label="Generalize predicate">
			<context>?p rdfs:subPropertyOf ?q</context>
			<left>?x ?p ?y</left>
			<right>?x ?q ?y</right>
			<cost>2.0</cost>
			<explanation>Generalize ?p in ?q</explanation>
		</rule>

		<rule iri="http://sqtrl-rules/generic/4" label="Suppress triple">
			<context>?x ?p ?y</context>
			<left>?x ?p ?y</left>
			<right></right>
			<cost>8.0</cost>
			<explanation>Forgetting triple ?x ?p ?y</explanation>
		</rule>

		<rule iri="http://sqtrl-rules/ahpo/1"
			label="Switch sender and recipient">
			<context></context>
			<left>?l ahpo:sentBy ?x . ?l ahpo:sentTo ?y</left>
			<right>?l ahpo:sentBy ?y . ?l ahpo:sentTo ?x</right>
			<cost>2.0</cost>
			<explanation>Exchange the sender (?x) and the recipient (?y) of
				letters</explanation>
		</rule>


		<rule iri="http://sqtrl-rules/ahpo/2"
			label="Replace sender by quoted person">
			<context></context>
			<left>?l1 ahpo:sentBy ?x . ?l1 ahpo:citeName ?y</left>
			<right>?l1 ahpo:sentBy ?y</right>
			<cost>3.0</cost>
			<explanation>Replacing one of the correspondent by one of the quoted
				persons</explanation>
		</rule>

		<rule iri="http://sqtrl-rules/ahpo/3"
			label="Replace recipient by quoted person">
			<context></context>
			<left>?l1 ahpo:sentTo ?x . ?l1 ahpo:citeName ?y</left>
			<right>?l1 ahpo:sentTo ?y</right>
			<cost>3.0</cost>
			<explanation>Replacing one of the correspondent by one of the quoted
				persons</explanation>
		</rule>

		<rule iri="http://sqtrl-rules/ahpo/4" label="Replace subject">
			<context>?l2 dcterms:subject ?x . ?l2 dcterms:subject ?y</context>
			<left>?l1 dcterms:subject ?x</left>
			<right>?l1 dcterms:subject ?y</right>
			<cost>3.0</cost>
			<explanation>Replacing a subject by another related subject
			</explanation>
		</rule>


		<rule iri="http://sqtrl-rules/ahpo/5" label="Replace sender">
			<context>?l1 dcterms:subject ?s . ?l2 ahpo:correspondent ?y . ?l2
				dcterms:subject ?s</context>
			<left>?l1 ahpo:correspondent ?x</left>
			<right>?l1 ahpo:correspondent ?y</right>
			<cost>3.0</cost>
			<explanation>Replacing the correspondent by another correspondent
				related to the subject</explanation>
		</rule>

		<rule iri="http://sqtrl-rules/ahpo/6"
			label="Transform correspondent as a quoted person">
			<context></context>
			<left>?l1 ahpo:correspondent ?x</left>
			<right>?l1 ahpo:citeName ?x</right>
			<cost>3.0</cost>
			<explanation>Remove the correspondent and place it as one of the
				quoted persons</explanation>
		</rule>

		<rule iri="http://sqtrl-rules/ahpo/7"
			label="Replace the place of archive">
			<context>?l1 ahpo:archivedAt ?x . ?l1 ahpo:hasAddress ?a1 . ?a1
				ahpo:town ?t1 .
				?l2 ahpo:archivedAt ?y . ?l2 ahpo:hasAddress ?a2 . ?a2 ahpo:town ?t1
			</context>
			<left>?l1 ahpo:archivedAt ?x</left>
			<right>?l1 ahpo:archivedAt ?y</right>
			<cost>3.0</cost>
			<explanation>Replace the place of archive
				by another place of archives located in the same city
			</explanation>
		</rule>

		<rule iri="http://sqtrl-rules/ahpo/8"
			label="Replace subject with place related subject">
			<context>?l1 ahpo:archivedAt ?x . ?l1 dcterms:subject ?s1 . ?l2
				ahpo:archivedAt ?x . ?l2 dcterms:subject ?s2</context>
			<left>?l1 dcterms:subject ?s1</left>
			<right>?l1 dcterms:subject ?s2</right>
			<cost>2.0</cost>
			<explanation>Replace the subject by another subject
				of letters archived within the same place
			</explanation>
		</rule>
	</rules>
</SQTRule>
